<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity2">

    <View
        android:id="@+id/view"
        android:layout_width="345dp"
        android:layout_height="258dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="171dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="229dp"
        android:background="@drawable/act_2_back_form"
        app:layout_constraintBottom_toTopOf="@+id/btn_return"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view2"
        android:layout_width="247dp"
        android:layout_height="52dp"
        android:layout_marginStart="-294dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/act_2_back_of_buttons"
        app:layout_constraintStart_toEndOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <View
        android:id="@+id/view3"
        android:layout_width="247dp"
        android:layout_height="52dp"
        android:layout_marginStart="-294dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/act_2_back_of_buttons"
        app:layout_constraintStart_toEndOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/view2" />

    <Button
        android:id="@+id/btn_return"
        android:layout_width="266dp"
        android:layout_height="57dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="-20dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/buttons"
        android:onClick="return_button"
        android:text="Назад"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <TextView
        android:id="@+id/put2"
        android:layout_width="229dp"
        android:layout_height="24dp"
        android:layout_marginStart="-235dp"
        android:layout_marginTop="-40dp"
        android:width="350sp"
        android:height="120dp"
        android:text="Комрон Бобочонов"
        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/view2"
        app:layout_constraintTop_toBottomOf="@+id/view2" />

    <TextView
        android:id="@+id/put"
        android:layout_width="222dp"
        android:layout_height="28dp"
        android:layout_marginStart="-235dp"
        android:layout_marginTop="-40dp"
        android:width="350sp"
        android:height="120dp"
        android:text="Тебе уже: 17"
        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/view3"
        app:layout_constraintTop_toBottomOf="@+id/view3" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="102dp"
        android:layout_height="44dp"
        android:layout_marginStart="-220dp"
        android:layout_marginTop="-230dp"
        android:text="Привет"
        android:textColor="#000000"
        android:textSize="27sp"
        app:layout_constraintStart_toEndOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/view" />

</androidx.constraintlayout.widget.ConstraintLayout>